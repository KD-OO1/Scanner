<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Textscanner"
    android:background="#968787">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/idTVLogo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Welcome to text detector"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/dark_blue_shade_1"


        android:id="@+id/idTVHead"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/idBtnCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVHead"
        android:layout_marginStart="20dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_back"

        android:text="Capture"></Button>


</RelativeLayout>